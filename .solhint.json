{
  "extends": "solhint:recommended",
  "rules": {
    "prettier/prettier": "warn",
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "reason-string": ["warn", { "maxLength": 100 }]
  },
  "plugins": ["prettier"]
}
